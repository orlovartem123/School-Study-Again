@using SchoolBusinessLogic.BindingModels.TeacherModels 
@model BindActivityWithElectivesBindingModel

@{
    ViewData["Title"] = "BindActivityWithElectives";
}

<div class="text-center">
    <h2 class="display-4">Bind activity with electives</h2>
</div>

﻿<form class="container-fluid" style="max-width: 800px;" asp-action="BindActivityWithElectives">

    <div class="form-group" id="electivesToMaterialsParent">
        <div class="row">
            <label class="col-lg-3">
                Activity
            </label>
            <div class="col-lg-9" style="display: flex; justify-content:space-between;">
                <select asp-for="ActivityId" name="ActivityId" class="form-control" asp-items="@(new SelectList(@ViewBag.Activities,"Id", "Name"))">
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row justify-content-between">
            <label class="col-lg-3">
                Electives
            </label>
            <div class="col-lg-9">
                <select asp-for="Electives" name="Electives" multiple class="form-control" asp-items="@(new SelectList(@ViewBag.Electives,"Id", "Name"))">
                    <option selected value="-1">Not chosen</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Bind
            </button>
        </div>
    </div>
</form>