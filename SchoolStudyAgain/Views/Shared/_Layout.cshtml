<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolStudyAgain</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-brand" style="position: relative; min-width: 240px; min-height: 68px; padding-top: 0;">
                    <img src="~/img/svg/default-monochrome.svg" style="position: absolute; z-index: 1; width: 100%; height: 100%;">
                    <a style="z-index: 2; position: absolute; width: 100%; height: 100%;" asp-controller="Home" asp-action="Index"></a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" datatarget=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="nav nav-tabs">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Materials</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Material" asp-action="Create">Create</a>
                            <a class="dropdown-item" asp-controller="Report" asp-action="Index">Create reports</a>
                            <a class="dropdown-item" asp-controller="Diagram" asp-action="MostPopularMaterial">About most popular</a>
                            <a class="dropdown-item" asp-controller="Material" asp-action="List">Show materials</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Electives</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Elective" asp-action="Create">Create</a>
                            <a class="dropdown-item" asp-controller="Elective" asp-action="BindActivityWithElectives">Bind activity with electives</a>
                            <a class="dropdown-item" asp-controller="Report" asp-action="PdfReport">Pdf report</a>
                            <a class="dropdown-item" asp-controller="Elective" asp-action="List">Show electives</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Medals</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Medal" asp-action="Create">Create</a>
                            <a class="dropdown-item" asp-controller="Medal" asp-action="List">Show medals</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area=""
                           asp-controller="Home" asp-action="Enter">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area=""
                           asp-controller="Home" asp-action="Register">Sign Up</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Study again - <a asp-area="" aspcontroller="Home" asp-action="Privacy">Personal data</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>