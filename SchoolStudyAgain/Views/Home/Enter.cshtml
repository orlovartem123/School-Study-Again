@{
    ViewData["Title"] = "Enter";
}
<div class="text-center">
    <h2 class="display-4">Login to the application</h2>
</div>
<form class="container-fluid" style="max-width: 480px;" method="post">
    <div class="form-group">
        <label for="InputEmail">Email address</label>
        <input type="email" name="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="InputEmail">Login</label>
        <input type="text" name="login" class="form-control" id="InputLogin" aria-describedby="emailHelp" placeholder="Enter login">
    </div>
    <div class="form-group">
        <label for="InputPassword">Password</label>
        <input type="password" name="password" class="form-control" id="InputPassword" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary submit-button-custom" style="min-width: 120px;">Login</button>
</form>