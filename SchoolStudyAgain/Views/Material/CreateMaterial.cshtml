﻿<form class="container-fluid" style="max-width: 580px;" method="post">
    <div class="form-group">
        <div class="row justify-content-between">
            <label class="col-lg-4">
                Material name
            </label>
            <div class="col-lg-8">
                <input type="text" name="name" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Material price
            </label>
            <div class="col-lg-8">
                <input type="number" name="price" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <button type="button" style="min-width: 100px" class="btn btn-sm btn-light">
                Create
            </button>
        </div>
    </div>
</form>