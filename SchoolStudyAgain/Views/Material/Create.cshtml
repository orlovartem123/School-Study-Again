@model SchoolBusinessLogic.BindingModels.TeacherModels.MaterialBindingModel

@{
    ViewData["Title"] = "CreateMaterial";
}
<div class="text-center">
    <h2 class="display-4">Create material</h2>
</div>
﻿<form class="container-fluid" style="max-width: 620px;" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="row justify-content-between">
            <label class="col-lg-4">
                Material name
            </label>
            <div class="col-lg-8">
                <input asp-for="Name" type="text" name="name" required class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-lg-4 justify-content-between">
                Material price
            </label>
            <div class="col-lg-8">
                <input asp-for="Price" type="number" name="price" required class="form-control" />
            </div>
        </div>
    </div>

    @*<div class="form-group">
            <div class="row justify-content-between">
                <label class="col-lg-4">
                    Electives
                </label>
                <div class="col-lg-8">
                    <select asp-for="ElectiveIds" name="ElectiveIds" multiple class="form-control" asp-items="@(new SelectList(@ViewBag.Electives,"Id", "Name"))"></select>
                </div>
            </div>
        </div>*@

    <div class="form-group" id="electivesToMaterialsParent">
        <div class="row">
            <label class="col-lg-4">
                Electives
            </label>
            <div id="electivesToMaterials" class="col-lg-8" style="display:flex;justify-content:space-between;">
                <select class="form-control" asp-items="@(new SelectList(@ViewBag.Electives,"Id", "Name"))"></select>
                <input required type="number" class="form-control" style="width:80px; margin-left: 6px;" />
                <input type="button" value="+" onclick="test();" style="width: 50px; margin-left: 6px;" class="btn btn-sm btn-light" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row justify-content-between">
            <label class="col-lg-4">
                Interests
            </label>
            <div class="col-lg-8">
                <select asp-for="InterestIds" name="InterestIds" multiple class="form-control" asp-items="@(new SelectList(@ViewBag.Interests,"Id", "Name"))"></select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Create
            </button>
        </div>
    </div>
</form>
<script>
    function test() {
        let element = document.getElementById('electivesToMaterialsParent');
        let mainDiv = document.createElement('div');
        mainDiv.classList.add('row');
        mainDiv.setAttribute('style','margin-top: 6px;');

        let label = document.createElement('label');
        label.classList.add('col-lg-4');
        let childDiv = document.createElement('div');
        childDiv.classList.add('col-lg-8');
        childDiv.setAttribute('style', 'display:flex;justify-content:space-between;');
        let select = document.createElement('select');
        select.classList.add('form-control');

        var x = new XMLHttpRequest();
        x.onload = function () {

            // преобразование ответа сервера в массив
            var options = this.responseText.split('\n');
            alert(options[0]);

            // заполнение списка
            for (var i = 0; i < options.length; i++) {
                var option = document.createElement('option');
                option.value = options[i].Id;
                option.text = options[i].Name;
                select.options.add(option);
            }
        };
        x.open("GET", "/Material/GetElectives", true);
        x.send();

        let inputCount = document.createElement('input');
        inputCount.classList.add('form-control');
        inputCount.setAttribute('required');
        inputCount.setAttribute('type', 'number');
        inputCount.setAttribute('style', 'width:80px; margin-left: 6px;');

        let inputButton = document.createElement('input');
        inputButton.classList.add('btn btn-sm btn-light');
        inputCount.setAttribute('type', 'button');
        inputCount.setAttribute('value', '+');
        inputCount.setAttribute('onclick', 'test()');
        inputCount.setAttribute('style', 'width: 50px; margin-left: 6px;');

        childDiv.appendChild(select);
        childDiv.appendChild(inputCount);
        childDiv.appendChild(inputButton);

        mainDiv.appendChild(label);
        mainDiv.appendChild(childDiv);

        element.appendChild(mainDiv);
    }


</script>