@model List<int>

@{
    ViewData["Title"] = "Create reports";
}
<div class="text-center">
    <h2 class="display-4">Activity by materials reports</h2>
</div>

﻿<form class="container-fluid" style="max-width: 580px;" method="post">

    <div class="form-group">
        <div class="row">
            <select name="selectedMaterials" multiple required class="form-control" style="min-height: 180px;" asp-items="@(new SelectList(@ViewBag.Materials,"Id", "Name"))">
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="row justify-content-between">
            <button type="submit" asp-action="MakeReportWord" style="min-width: 140px; margin-left: 20px" class="btn btn-sm btn-light">
                Word
            </button>
            <button type="submit" asp-action="MakeReportXls" style="min-width: 140px; margin-right:20px;" class="btn btn-sm btn-light">
                Excel
            </button>
        </div>
    </div>
</form>